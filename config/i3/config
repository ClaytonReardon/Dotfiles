# Focus on window mouse is currently on
focus_follows_mouse no

# By default, focusing on a new workspace on a new monitor, the mouse is warped to the center
mouse_warping none

# Makes switching to previous workspace easy
# Say you're on workspace 3:video and you switch to workspace 2:notes to jot something down
# If you don't remember where you came from, you can just hit mod+2 again
workspace_auto_back_and_forth yes

# If an app on another workspace sends an urgency hint, switch to that workspace may cause 
# immediate focus of that window, causing the urgency border color to revert, making it 
# hard to tell what sent the urgeny. This delay's that color change.
force_display_urgency_hint 1000 ms

# Configure how to initiate tiling drag
tiling_drag modifier titlebar


